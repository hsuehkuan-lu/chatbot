{
    "name": "Chatbot",
    "n_gpu": 1,

    "arch": {
        "type": "ChatbotModel",
        "args": {}
    },
    "preprocess": {
        "type": "ChatbotDataPreprocess",
        "args": {
            "data_dir": "data/cornell movie-dialogs corpus"
        }
    },
    "data_loader": {
        "type": "ChatbotDataLoader",
        "args":{
            "data_dir": "data/cornell movie-dialogs corpus",
            "filename": "formatted_movie_lines.csv",
            "text_field_path": null,
            "vocab_path": null,
            "batch_size": 128,
            "sent_len": 32,
            "init_token": "<START>",
            "eos_token": "<END>",
            "pad_token": "<PAD>",
            "unk_token": "<UNK>",
            "min_freq": 5,
            "shuffle": true,
            "validation_split": 0.1
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 10,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 2,

        "tensorboard": true
    }
}
